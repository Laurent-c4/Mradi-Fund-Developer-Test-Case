<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <TextView
        android:id="@+id/labelTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:layout_marginTop="20dp"
        />

    <com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout
        android:id="@+id/imageViewRound3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:corner_radius="17dp"
        android:layout_toRightOf="@+id/labelTextView">
        <ImageView
            android:id="@+id/historyListIcon"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_icon_historylist" />

    </com.jcminarro.roundkornerlayout.RoundKornerRelativeLayout>

    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageViewRound3"
        android:layout_toRightOf="@id/imageViewRound3"
        >

        <TextView
            android:id="@+id/MPESAStatementTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:textSize="18dp"
            android:text="TextView" />

        <TextView
            android:id="@+id/totalSpentLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#847A7A"
            android:layout_below="@id/MPESAStatementTextView"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="15dp"
            android:text="Total Spent: " />

        <TextView
            android:id="@+id/totalSpentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#847A7A"
            android:layout_below="@id/MPESAStatementTextView"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="3dp"
            android:layout_toRightOf="@id/totalSpentLabel"
            android:text="TextView" />

    </RelativeLayout>
</RelativeLayout>
