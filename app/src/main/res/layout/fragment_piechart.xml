<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pieChartRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BarGraphFragment">

    <com.github.mikephil.charting.charts.PieChart
        android:id="@+id/pieChart"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_toRightOf="@+id/navigateToLineGraph"
        android:layout_toLeftOf="@id/navigateToBarGraph"/>

    <TableLayout
        android:id="@+id/child_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pieChart"
        android:orientation="vertical" />


    <ImageButton
        android:id="@+id/navigateToLineGraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="3dp"
        android:layout_alignParentLeft="true"
        android:src="@drawable/ic_arrow_left_green_48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"/>

    <ImageButton
        android:id="@+id/navigateToBarGraph"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="3dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/ic_arrow_right_green_48dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"/>


</RelativeLayout>